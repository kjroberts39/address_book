<p id="notice"><%= notice %></p>
<div class="container">
  <h2>Contacts</h2>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Phone</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.address %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone %></td>
            <td><%= link_to 'Show', contact, class: "btn btn-primary"  %></td>
            <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-success" %></td>
            <td><%= link_to 'Delete', contact, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= link_to 'New Contact', new_contact_path, class: "btn btn-primary" %>
  </div>
</div>
<br>


