
<div class="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading">Sign In</h2>

    <%= f.email_field :email, autofocus: true, class: "form-control col-md-4 space", placeholder: "Email Address" %>

    <%= f.password_field :password, autocomplete: "off", class: "form-control col-md-4 space", placeholder: "Password" %>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox space">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions space">
        <%= f.submit "Sign In", class: "btn btn-lg btn-primary btn-block, col-md-2" %>
    </div>
  <% end %>
</div>